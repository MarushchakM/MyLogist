generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Truck {
  id     String      @id @default(cuid())
  number String      @unique
  status TruckStatus @default(FREE)

  trailer   Trailer? @relation(fields: [trailerId], references: [id])
  trailerId String?  @unique
}

enum TruckStatus {
  FREE
  IN_WORKSHOP
  ON_ROAD
}

model Trailer {
  id     String        @id @default(cuid())
  number String        @unique
  status TrailerStatus @default(FREE)

  truck Truck?
}

enum TrailerStatus {
  FREE
  IN_WORKSHOP
  ON_ROAD
}
