generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Truck {
  id     String @id @default(cuid())
  number String @unique
  status TruckStatus @default(FREE)
}

enum TruckStatus {
  FREE
  IN_WORKSHOP
  ON_ROAD
}